<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <title>안내문 수정</title>
    <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <h1>안내문 수정</h1>
    <form action="/notices/edit/<%= notice._id %>" method="POST">
        <input type="text" name="title" value="<%= notice.title %>" placeholder="제목" required>
        <div id="editor"><%- notice.content %></div> <!-- HTML을 안전하게 출력 -->
        <input type="hidden" name="content" id="content">
        <button type="submit">수정</button>
    </form>
    <script src="https://cdn.quilljs.com/1.3.6/quill.min.js"></script>
    <script src="/quill-config.js"></script>
    <script>
        const quill = initializeQuill('#editor');

        quill.root.innerHTML = `<%- notice.content %>`; // 안전하게 HTML 삽입
        document.querySelector('form').onsubmit = function() {
            const content = document.querySelector('#content');
            content.value = quill.root.innerHTML; // 에디터 내용을 hidden input에 저장
        };
    </script>
</body>
</html>
